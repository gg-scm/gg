{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "go test",
      "type": "shell",
      "command": "go test ./...",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "Generate man page",
      "type": "shell",
      "command": "pandoc --standalone --to man misc/gg.1.md -o misc/gg.1",
      "group": "build",
      "problemMatcher": []
     }
  ]
}
